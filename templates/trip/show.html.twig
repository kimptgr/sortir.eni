{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trip.name }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ trip.startDateTime ? trip.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ trip.duration }}</td>
            </tr>
            <tr>
                <th>RegistrationDeadline</th>
                <td>{{ trip.registrationDeadline ? trip.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbRegistrationMax</th>
                <td>{{ trip.nbRegistrationMax }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ trip.info }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trip_index') }}">back to list</a>

    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
