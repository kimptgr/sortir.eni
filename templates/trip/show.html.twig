{% extends 'base.html.twig' %}

{% block title %}Sortie | {{ parent() }}{% endblock %}

{% block body %}
<div class="mx-auto mt-10 px-4">
    <h1 class="text-3xl font-semibold text-center mb-6">{{ trip.name }}</h1>

    <div class="bg-white shadow-md rounded-lg text-center p-6">

    <table class="table">
        <tbody>

            <tr>
                <th>StartDateTime</th>
                <td>{{ trip.startDateTime ? trip.startDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ trip.duration }}</td>
            </tr>
            <tr>
                <th>RegistrationDeadline</th>
                <td>{{ trip.registrationDeadline ? trip.registrationDeadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbRegistrationMax</th>
                <td>{{ trip.nbRegistrationMax }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ trip.info }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ trip.place.street }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_trip_index') }}">back to list</a>

    {%  if app.user.id == trip.organizer.id %}
    <a class="" href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>
    {% endif %}

    {%  if app.user.id == trip.organizer.id %}
        {{ include('trip/_delete_form.html.twig') }}
    {% endif %}
    <form method="post" action="{{ path('app_trip_show', { id: trip.id }) }}">
        <button type="submit">Participer</button>
    </form>
    </div>
</div>
{% endblock %}
