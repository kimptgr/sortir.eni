{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe | {{ parent() }}{% endblock %}
{% block body %}
    <div class="main-container">
        <h1>Réinitialiser mot de passe</h1>
        {{ form_start(resetForm) }}
        <div class="bloc-article flex flex-col items-center justify-center">
                    <div class="form-row mb-1">
                        {{ form_label(resetForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                        {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500'}}) }}
                    </div>
            <div class="form-row mb-1">
                {{ form_label(resetForm.plainPassword.second, 'Confirmez mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold'}}) }}
                {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500'}}) }}
            </div>
            <div class="text-red-500 text-xs h-10">
                {{ form_errors(resetForm.plainPassword.first) }}
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>
            <button class="btn-search btn-primary">Réinitialiser mot de passe</button>
        </div>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
